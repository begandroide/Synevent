<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="30dp"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#e9e8e8"
        android:layout_marginBottom="30dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Join to event"
                android:gravity="center"
                android:textSize="25dp"
                android:background="@color/colorPrimary"
                android:textColor="#fff"/>
            <Button
                android:id="@+id/btn_join"
                android:background="@android:color/transparent"
                android:layout_width="50dp"
                android:layout_marginTop="2dp"
                android:layout_height="30dp"
                android:drawableStart="@drawable/share_2"
                android:layout_alignParentRight="true"
                android:gravity="right"
                android:onClick="joinToEvent"
                />
        </RelativeLayout>
        <EditText
            android:id="@+id/code_join_event"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:layout_marginBottom="10dp"
            android:hint="Do you have a code? copy here"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Joined events"
            android:gravity="center"
            android:textSize="25dp"
            android:background="@color/colorPrimary"
            android:textColor="#fff"/>

        <ListView
            android:id="@+id/lv_joined_events"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>